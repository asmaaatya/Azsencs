<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/compimg"
        android:src="@drawable/ic_launcher_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="cdgvdsusiddojmal"
        android:textSize="30sp"
        android:id="@+id/comptext"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/compimg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compinfo"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_info_black_24dp"
        android:text="for more info visit our page "
android:layout_below="@+id/comptext"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comppage"
        android:src="@drawable/face1"
        android:layout_margin="20dp"
        android:layout_below="@id/comptext"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>