<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".network"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="
"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:id="@+id/intro"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:id="@+id/rf"
            android:layout_below="@id/intro"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="
"
            android:id="@+id/rm"
            android:layout_below="@id/rf"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="RESOURCES:"
            android:id="@+id/rtext"
            android:layout_below="@id/rm"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book1"
            android:id="@+id/image1"
            android:textSize="30sp"
            android:textColor="#4E1818"
            android:layout_below="@id/rtext"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:id="@+id/bokname"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/rtext"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yutu"
            android:id="@+id/image2"
            android:layout_below="@id/image1"
            android:layout_alignParentLeft="true"
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/image2"
            android:layout_below="@id/bokname"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:id="@+id/channelname"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/webb"
            android:layout_below="@id/image2"
            android:textSize="30sp"
            android:textColor="#5C4466"
            android:id="@+id/image4"
            />

        <TextView
            android:id="@+id/websitename"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/channelname"
            android:layout_toEndOf="@id/image4"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>